
<%= form_with url: notify_me_path do |form| %>
  <div class="form-group">
    <label for="upc" class="label-app">UPC: *</label>
  <%= form.text_field :upc, class:"form-control", id:"upc", placeholder: "Enter UPC" %>
  </div>
  <div class="form-group">
    <label for="price-limit" class="label-app">Limit price: * $</label>
  <%= form.text_field :limite_price, class:"form-control", id:"price-limit", placeholder: "Limit Price" %>
  </div>
  <div class="form-group">
    <label for="app-email" class="label-app">E-mail: *</label>
  <%= form.text_field :email, class:"form-control", id:"app-email", placeholder: "Email" %>
  </div>
  <button class="btn-app-subscribe">Subscribe</button>
<% end %>
