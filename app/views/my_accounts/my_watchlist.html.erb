<!DOCTYPE html>
<html lang="en">
<%= render partial: 'partials/title' %>

<body class="body-style">
<%= render partial: 'partials/header' %>
<section>
  <div class="container">
    <div class="add-section add-banner-section">
    </div>
  </div>
</section>
<!-- signup section start -->
<section class="mb-4">
  <div class="container mt-5 form-deelgun">
    <ul class="nav nav-tabs bg-transparent" id="myTab" role="tablist">
      <li class="nav-item" role="presentation">
        <button class="nav-link active" id="view-tab" data-bs-toggle="tab" data-bs-target="#view-tab-pane"
                type="button" role="tab" aria-controls="view-tab-pane" aria-selected="true"><a   href="<%= my_accounts_my_watchlist_path %>">Watchlist</a></button>
      </li>
    </ul>
    <div class="form-pages bg-white p-4">

      <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="userdeal-tab-pane" role="tabpanel" aria-labelledby="userdeal-tab"
             tabindex="0">
          <div class="container">
            <div class="row row-cols-5 card-devider">
              <% @watchlist.each do |watchlist| %>
                <div class="col my-3 sub-card">
                  <div class="card h-100">
                    <div class="card-body d-flex justify-content-between">
                      <% unless watchlist.product.sponsored != true %>
                        <span class="tile__sponsored"><a href="#">Sponsored</a></span>
                      <% end %>
                      <a href="#" class="card-link "><span></span></a>
                      <span class="card-link price-tag price-tag--one-line"><span>$<%= watchlist.product.price %></span></span>
                    </div>
                    <div class="tile__image-container">
                      <a href="<%= product_path(watchlist.product) %>"><image src = "<%= watchlist.product.image %>" /></a>
                    </div>
                    <div class="card-body tile__title">
                      <p class="card-text truncate "><a href="<%= product_path(watchlist.product) %>"><%= watchlist.product.title %></a></p>
                    </div>
                    <div class="card-body d-flex justify-content-between tile__actions-container">
                      <a href="#" class="card-link tile__rate-action tile__likes icon-fa-link"><i
                        class="fa fa-thumbs-up"></i> <span>2</span></a>
                      <a href="#" class="card-link tile__rate-action tile__dislikes icon-fa-link"><i
                        class="fa fa-thumbs-down"></i> <span>13</span></a>
                      <a href="#" class="card-link tile__rate-action tile__comments icon-fa-link"><i
                        class="fa fa-comments"></i> <span>0</span></a>
                    </div>
                    <div class="card-body d-flex justify-content-between card-footer tile__actions-container">
                      <% if watchlist.product.store.present? %>
                        <a href="#" class="card-link icon-fa-link"><i class="fa fa-shopping-cart"></i><span><%= watchlist.product.store.title %></span></a>
                      <% end %>
                      <a href="#" class="card-link icon-fa-link"><i class="fa fa-balance-scale"></i><span></span></a>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- card section two start here  -->
<%= render partial: 'partials/middle_adds' %>
<section class="mb-4">
  <div class="container">
    <div class="row">
      <%= render partial: 'partials/bottom_cards' %>
    </div>
  </div>
</section>
<%= render partial: 'partials/footer' %>
</body>

</html>
