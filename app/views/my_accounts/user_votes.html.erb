      <div class="tab-content" id="myTabContent">
        <% if @product.present? %>

        <div class="tab-pane fade show active" id="uservote-tab-pane" role="tabpanel" aria-labelledby="uservote-tab"
             tabindex="0">
          <div class="">
            <div class="card__title">
              <h1><%= current_user.username %></h1>
            </div>
            <div class="card__content">
              <h3 title="Sum of votes this user has casted on all products.">User's votes for products</h3>
