                <li>
                  <% if @product.likes.present? %>
                  <b>Up:</b> <%= @product.likes.all.count %>
                    <% else %>
                    <b>Up:</b> 0
                  <% end %>
                </li>
                <li>
                  <% if @product.unlikes.present? %>
                    <b>Down:</b> <%= @product.unlikes.all.count %>
                  <% else %>
                    <b>Down:</b> 0
                  <% end %>
                </li>
              </ul>
              <br>
              <h3 title="Sum of votes this user has casted on all comments.">User's votes for comments</h3>
