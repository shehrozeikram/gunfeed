<!-- signup section start -->
<section class="mb-4">
  <div class="container mt-5 form-deelgun">
    <ul class="nav nav-tabs " id="myTab" role="tablist">
      <li class="nav-item" role="presentation">
        <a href="<%= my_accounts_views_path %>" class="nav-link">View</a>
      </li>
      <li class="nav-item" role="presentation">
        <a href="<%= edit_user_registration_path %>" class=" nav-link ">Edit</a>
      </li>
      <li class="nav-item" role="presentation">
        <a href="<%= my_accounts_blocked_deal_settings_path %>" class="nav-link" >Blocked Deal
          Settings</a>
      </li>
      <li class="nav-item" role="presentation">
        <a href="<%= my_accounts_user_deals_path %>" class="nav-link active" >User's deals
          (3)</a>
      </li>
      <li class="nav-item" role="presentation">
        <a href="<%= my_accounts_user_comments_path %>" class="nav-link " >User's comments
          (<%= current_user.comments.all.count %>)</a>
      </li>
      <li class="nav-item" role="presentation">
        <a href="<%= my_accounts_user_votes_path %>" class="nav-link ">User's votes</a>
      </li>
      <li class="nav-item" role="presentation">
        <a href="<%= my_accounts_my_reviews_path %>" class="nav-link ">My Reviews</a>
      </li>
    </ul>
    <div class="form-pages bg-white p-4">

      <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="userdeal-tab-pane" role="tabpanel" aria-labelledby="userdeal-tab"
             tabindex="0">
          <div class="container">
            <div class="row row-cols-5 card-devider">
              <% @products.each do |product| %>
                <div class="col my-3 sub-card">
                  <div class="card h-100">
                    <div class="card-body d-flex justify-content-between">
                      <% if product.sponsored == true %>
                      <span class="tile__sponsored"><a href="#">Sponsored</a></span>
                        <% end %>
                      <a href="#" class="card-link "><span></span></a>
                      <span class="card-link price-tag price-tag--one-line"><span>$<%= product.price %></span></span>
                    </div>
                    <div class="tile__image-container">
                      <a href="<%= product_path(product) %>"><image src = "<%= product.image %>" /></a>
                    </div>

                    <div class="card-body tile__title">
                      <p class="card-text "><a href="<%= product_path(product) %>"><%= product.title %></a></p>
                    </div>
                    <div class="card-body d-flex justify-content-between tile__actions-container">
                      <a href="#" class="card-link tile__rate-action tile__likes icon-fa-link">
                        <i class="fa fa-thumbs-up"></i>
                        <% if product.likes.present? %>
                        <span><%= product.likes.count %></span>
                          <% else %>
                          <span>0</span>
                          <% end %>
                      </a>
                      <a href="#" class="card-link tile__rate-action tile__dislikes icon-fa-link"><i
                        class="fa fa-thumbs-down"></i>
                        <% if product.unlikes.present? %>
                          <span><%= product.unlikes.count %></span>
                        <% else %>
                          <span>0</span>
                        <% end %>
                      </a>
                      <a href="#" class="card-link tile__rate-action tile__comments icon-fa-link"><i
                        class="fa fa-comments"></i>
                        <% if product.comments.present? %>
                          <span><%= product.comments.all.count %></span>
                        <% else %>
                          <span>0</span>
                        <% end %>
                      </a>
                    </div>
                    <div class="card-body d-flex justify-content-between card-footer tile__actions-container">
                      <% if product.link.present? %>
                      <a href="<%= product.link %>" class="card-link icon-fa-link"><i
                        class="fa fa-shopping-cart"></i><span><%= product.store.title %></span></a>
                      <% else %>
                        <a href="<%= store_path(product.store.id) %>" class="card-link icon-fa-link"><i
                          class="fa fa-shopping-cart"></i><span><%= product.store.title %></span></a>
                        <% end %>
                      <a href="#" class="card-link icon-fa-link"><i
                        class="fa fa-balance-scale"></i><span></span></a>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
