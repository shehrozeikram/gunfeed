                <td><a href="#"><%= stock.store.title %></a> <i class="fa fa-scissors"></i> </td>
                <td class=""><span>$<%= stock.price %></span></td>
                <td> $<%= stock.shipping_cost %></td>
              </tr>
            <% end %>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
