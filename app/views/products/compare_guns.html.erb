<!DOCTYPE html>
<html lang="en">
<%= render partial: 'partials/title' %>
<body class="body-style">
<%= render partial: 'partials/header' %>
<section>
  <div class="container">
    <div class="add-section add-banner-section">
    </div>
  </div>
</section>
<section>
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <div class="card p-3">
          <div class="card__title">
            <h1 class="listing-title listing-title--block"> Compare Guns</h1>
            <p class="subtitle"> Compare gun price, size, weight, capacity and other specifications.</p>
          </div>
          <div class="card__content">

            <div class="compare">
              <form class="compare__form js-compare-form" data-action-prototype="/compare/__product1__/vs/__product2__" data-container-selector="#product-compare-content">
                <div class="compare__select-product">
                  <select class="js-compare-products-select select2-hidden-accessible" title="Select gun to compare" name="__product1__" data-placeholder="Select gun to compare" data-ajax-path="/ajax-search-product-from-catalog" data-trigger-event="initialize-select2-for-compare-products" tabindex="-1" aria-hidden="true">
                    <option value="011356577207" selected="">Savage Arms 110 UltraLite Gray Left Hand .28 Nosler 57720</option>
                  </select>
                  <span class="select2 select2-container select2-container--light" dir="ltr" style="width: 455px;">
                      <span class="selection">
                        <span class="select2-selection select2-selection--single" role="combobox" aria-haspopup="true" aria-expanded="false" title="Select gun to compare" tabindex="0" aria-labelledby="select2-__product1__-4z-container">
                          <span class="select2-selection__rendered" id="select2-__product1__-4z-container" title="Savage Arms 110 UltraLite Gray Left Hand .28 Nosler 57720"><%= @product.title %></span>
                          <span class="select2-selection__arrow" role="presentation">
                            <b role="presentation"></b>
                          </span>
                        </span>
                      </span>
                      <span class="dropdown-wrapper" aria-hidden="true"></span>
                    </span>
                </div>
                <div class="compare__select-label">vs</div>
                <div class="compare__select-product">
                  <select class="js-compare-products-select select2-hidden-accessible" title="Select gun to compare" name="__product2__" data-placeholder="Select gun to compare" data-ajax-path="/ajax-search-product-from-catalog" data-trigger-event="initialize-select2-for-compare-products" tabindex="-1" aria-hidden="true">
                    <option value="011356574848" selected="">Savage Arms Savage AXIS II Overwatch 308/7.62x51mm 57484</option>
                  </select>
                  <span class="select2 select2-container select2-container--light" dir="ltr" style="width: 430px;">
                      <span class="selection">
                        <span class="select2-selection select2-selection--single" role="combobox" aria-haspopup="true" aria-expanded="false" title="Select gun to compare" tabindex="0" aria-labelledby="select2-__product2__-wu-container">
                          <span class="select2-selection__rendered" id="select2-__product2__-wu-container" title="Savage Arms Savage AXIS II Overwatch 308/7.62x51mm 57484"><%= @compared.title %></span>
                          <span class="select2-selection__arrow" role="presentation">
                            <b role="presentation"></b>
                          </span>
                        </span>
                      </span>
                      <span class="dropdown-wrapper" aria-hidden="true"></span>
                    </span>
                </div>
              </form>
              <div id="product-compare-content">
                <table class="table text-center compare__table">
                  <tbody>
                  <tr>
                    <td>
                      <div class="compare__image">
                        <img src="<%= @product.image %>" alt="">
                      </div>
                    </td>
                    <th class="label">Image</th>
                    <td>
                      <div class="compare__image">
                        <img src="<%= @compared.image %>" alt="">
                      </div>
                    </td>
                  </tr>
                  <tr>
                    <td>
                      <div class="compare__upc ">
                        <a href="#"><%= @product.upc %></a>
                      </div>
                    </td>
                    <th class="label label--upc">UPC</th>
                    <td>
                      <div class="compare__upc ">
                        <a href="#"><%= @compared.upc %></a>
                      </div>
                    </td>
                  </tr>
                  <tr>
                    <td>
                      <div class="compare__mpn ">
                        <a href="#"><%= @product.mpn %></a>
                      </div>
                    </td>
                    <th class="label label--mpn">MPN</th>
                    <td>
                      <div class="compare__mpn ">
                        <a href="#"><%= @compared.mpn %></a>
                      </div>
                    </td>
                  </tr>
                  <tr>
                    <td>
                      <div class="compare__brand "> <%= @product.brand %></div>
                    </td>
                    <th class="label label--brand">Brand</th>
                    <td>
