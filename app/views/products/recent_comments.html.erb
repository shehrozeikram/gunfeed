<!DOCTYPE html>
<html lang="en">
<%= render partial: 'partials/title' %>
<body class="body-style">
<%= render partial: 'partials/header' %>
<section>
  <div class="container">
    <div class="add-section add-banner-section">
    </div>
  </div>
</section>
<div class="comments__quick">
  <div class="row">
    <div class="col-xl-12">
      <div class="card p-2">
        <div class="card__title">
          <h3 class="h3">Recent Comments</h3>
        </div>
        <div class="col-lg-12">
          <div class="comments-container">
            <table style="width:100%;" class="table table-striped sticky-enabled sticky-table">
              <thead class="tableHeader-processed">
              <tr>
                <th>
                  <a href="#" title="" class="active">Comment</a>
                </th>
                <th>
                  <a href="#" title="" class="active">	Author</a>
                </th>
                <th>
                  <a href="#" title="" class="active">Posted in</a>
                </th>
                <th>
                  <a href="#" title="" class="active">Store	</a>
                </th>

                <th class="active">
                  <a href="#" title="" class="active">Time</a>
                </th>
              </tr>
              </thead>
              <tbody>

              <% @comments.each do |comment| %>
              <tr>
                <td>
                  <a href="#" target="_blank"><%= comment.body%></a>
                </td>
                <td><a href="#"><%= current_user.username %></a> </td>
                <td><a href="#"><%=comment.product.title%></a> </td>
                <td><a href="#"><%=comment.product.store.title%></a> </td>
                <td class="active"><%= comment.created_at %>
                </td>
              </tr>
              <% end %>



              </tbody>
            </table>

            <div class="item-list">
              <ul class="pager">
                <li class="pager-current first">1</li>
                <li class="pager-item"><a href="#" title="Go to page 2" class="active">2</a></li>
                <li class="pager-item"><a href="#" title="Go to page 3" class="active">3</a></li>
                <li class="pager-next"><a href="#" title="Go to next page" class="active">next ›</a></li><li class="pager-last last"><a href="#" title="Go to last page" class="active">last »</a></li></ul></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- card section two start here  -->
<%= render partial: 'partials/middle_adds' %>
<section class="mb-4">
  <div class="container">
    <div class="row">
      <%= render partial: 'partials/bottom_cards' %>
    </div>
  </div>
</section>
<%= render partial: 'partials/footer' %>
</body>
</html>
