<!DOCTYPE html>
<html lang="en">
<%= render partial: 'partials/title' %>
<body class="body-style">
<%= render partial: 'partials/header' %>
<section>
  <div class="container">
    <div class="add-section add-banner-section">
    </div>
  </div>
</section>
<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12">
      <div class="card card-coupon">
        <div class="card-title">
          <h2 class="h2">Create Coupon</h2>
        </div>
        <div class="card__content">
          <%= form_with model: @coupon , id:"node-form",class:"product-form", html: { multipart: true } do |form| %>
            <div class="form-group">
              <label for="storeSelect">Select store: *</label>
              <%= form.select(:store_id, Store.all.map{|s| [s.title, s.id]}, {prompt: true, selected: :store_id}, {class: "form-select-store", id: "storeSelect"}) %>
            </div>
            <div class="form-group">
              <label for="couponCode">Coupon code: *</label>
              <%= form.text_field :coupon_code, class: 'form-control', placeholder: "Enter Coupon Code", id: "couponCode" %>

            </div>
            <div class="form-group">
              <label for="discount">Type of discount: *</label>
              <%= form.text_field :discount, class: 'form-control', placeholder: "Type of discount", id: "discount" %>
            </div>

            <div class="form-group">
              <label for="couponLink">Coupon link: *</label>
              <%= form.text_field :coupon_link, class: 'form-control', placeholder: "Coupon link", id: "Coupon link" %>

            </div>
            <div class="form-group">
              <label for="form-date">Select date: *</label> <br>
              <div class="d-flex">
                <select class="form-date form-sel" id="form-date">

                  <option>2032</option>
                  <option>1</option>
                  <option>1</option>
                  <option>1</option>
                </select>

                <select class="form-date form-sel" id="form-date">

                  <option>Feb</option>
                  <option>1</option>
                  <option>1</option>
                  <option>1</option>
                </select>

                <select class="form-date form-sel" id="form-date">

                  <option>23</option>
                  <option>1</option>
                  <option>1</option>
                  <option>1</option>
                </select>
              </div>
            </div>
            <div class="form-group">
              <%= form.check_box :unknown_expiration, class: 'form-checkbox', id: 'check' %>
              <label for="check">Unknown expiration</label>
            </div>
            <input type="submit" name="op" id="edit-submit" value="Save" class="form-submit btn btn-default btn-primary">
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- card section two start here  -->
<%= render partial: 'partials/middle_adds' %>
<section class="mb-4">
  <div class="container">
    <div class="row">
      <%= render partial: 'partials/bottom_cards' %>
    </div>
  </div>
</section>
<%= render partial: 'partials/footer' %>
</body>
</html>
